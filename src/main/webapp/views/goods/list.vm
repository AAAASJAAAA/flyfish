<div class="row">
	<div class="col-md-12">
		<h3 class="page-header">商品信息列表</h3>
	</div>
</div>

<div class="panel panel-default">
	<div class="panel-heading">
		
	    <button type="button" class="btn btn-success margin-bottom" data-toggle='modal' data-target='#importModal'>普源导入</button>
	    <button type="button" class="btn btn-info margin-bottom" onclick="window.open('${rc.contextPath}/excel/export/common.html')">普源导出</button>
		<button type="button" class="btn btn-success margin-bottom" data-toggle='modal' data-target='#wishImportModal'>Wish导入</button>
		<button type="button" class="btn btn-info margin-bottom" onclick="window.open('${rc.contextPath}/csv/export/wish.html')">Wish导出</button>
	</div>
	<div class="panel-body">
		<div class="table-responsive">
	    	<table class="table table-striped table-bordered table-hover">
	    	  <thead>
			    <tr>
				  <th width="5%">主图</th>
			      <th width="10%">SKU</th>
			      <th width="10%">商品编码</th>
			      <th width="10%">商品名称</th>
			      <th width="25%">标题</th>
			      <th width="8%">业绩归属1</th>
			      <th width="8%">采购员</th>
			      <th width="8%">供应商</th>
			      <th width="8%">更新时间</th>
				  <th width="8%">操作</th>
			    </tr>
			  </thead>
			  <tbody>
				#if(!$!{pageModel.recList} || $!{pageModel.recList.size()} == 0)
					<tr>
						<td colspan="11">
							<h3>无数据</h3>
						</td>
					</tr>
				#end 
				#foreach($rec in $!{pageModel.recList})
			        <tr>
					  <td><img height="40px" width="40px" src="$!{rec.goodsPlat.mainImgUrl}"/></td>
			          <td>$!{rec.goods.sku}</td>
			          <td>$!{rec.goods.parentSku}</td>
			          <td>$!{rec.goods.name}</td>
					  <td>$!{rec.goodsPlat.name}</td>
			          <td>$!{rec.goods.bussOwner1}</td>
			          <td>$!{rec.goods.buyer}</td>
			          <td>
						#if($!{rec.goods.url}) <a href="$!{rec.goods.url}">供应商1</a><br>#end
						#if($!{rec.goods.url2}) <a href="$!{rec.goods.url2}">供应商2</a><br>#end
						#if($!{rec.goods.url3}) <a href="$!{rec.goods.url3}">供应商3</a><br>#end
					  </td>
			          <td>#if($!{rec.goods.modifyTm}) $!{rec.goods.modifyTm} #else $!{rec.goodsPlat.modifyTm} #end</td>
					  <td>修改</td>
			        </tr>
				#end
			  </tbody>
			</table>
			#parse("/base/page.vm")
		</div>
	</div>
</div>

<!-- import Modal-->
<div id="importModal" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">导入Excel文件</h4>
      </div>
      <div class="modal-body">
         <form id="importForm" action="${rc.contextPath}/excel/import/common.html" enctype="multipart/form-data" method="post">
           <div class="form-group">
             <label>请选择待导入的文件</label>
             <input type="file" name="file">
           </div>
           <div class="form-group">
                <label>SKU重复数据处理策略</label>
                <div class="radio">
                    <label>
                        <input type="radio" name="same" value="1" checked="">不导入
                    </label>
                </div>
                <div class="radio">
                    <label>
                        <input type="radio" name="same" value="2">覆盖旧数据
                    </label>
                </div>
            </div>
           <div class="form-group">
              <label>功能说明</label>
              <p class="form-control-static">为了能正确导入文件，请严格遵循模版填写数据！！！点击<a href="${rc.contextPath}/excel/temp/common.html">下载模版</a></p>
           </div>
	     </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="confirm-yes btn btn-primary" id="btnImport">提交</button>
        <button type="button" class="confirm-no btn btn-danger" data-dismiss="modal">取消</button>
      </div>
    </div>
  </div>
</div>
  
<!-- wish import Modal-->
<div id="wishImportModal" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">导入CSV文件</h4>
      </div>
      <div class="modal-body">
         <form id="wishImportForm" action="${rc.contextPath}/csv/import/wish.html" enctype="multipart/form-data" method="post">
           <div class="form-group">
             <label>请选择待导入的文件</label>
             <input type="file" name="file">
           </div>
           <div class="form-group">
                <label>SKU重复数据处理策略</label>
                <div class="radio">
                    <label>
                        <input type="radio" name="same" value="1" checked="">不导入
                    </label>
                </div>
                <div class="radio">
                    <label>
                        <input type="radio" name="same" value="2">覆盖旧数据
                    </label>
                </div>
            </div>
           <div class="form-group">
              <label>功能说明</label>
              <p class="form-control-static">为了能正确导入文件，请严格遵循模版填写数据！！！点击<a href="${rc.contextPath}/excel/temp/common.html">下载模版</a></p>
           </div>
	     </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="confirm-yes btn btn-primary" id="btnWishImport">提交</button>
        <button type="button" class="confirm-no btn btn-danger" data-dismiss="modal">取消</button>
      </div>
    </div>
  </div>
</div>

<script>
  $("#btnWishImport").on("click", function () {
     $("#wishImportForm").submit();
  })
  
  $("#btnImport").on("click", function () {
     $("#importForm").submit();
  })
  
</script>
