<div class="row">
	<div class="col-md-12">
		<h1 class="page-header">商品信息列表</h1>
	</div>
</div>

<div class="panel panel-default">
	<div class="panel-heading">
		
	    <button type="button" class="btn btn-success margin-bottom" data-toggle='modal' data-target='#importModal'>导入</button>
	    <button type="button" class="btn btn-info margin-bottom" onclick="window.open('${rc.contextPath}/excel/export/flyfish.html')">导出</button>
	</div>
	<div class="panel-body">
		<div class="table-responsive">
	    	<table class="table table-striped table-bordered table-hover">
	    	  <thead>
			    <tr>
			      <th>商品SKU</th>
			      <th>父SKU</th>
			      <th>商品名称</th>
			      <th>重量</th>
			      <th>成本价</th>
			      <th>业绩归属人</th>
			      <th>采购员</th>
			      <th>网页URL</th>
			      <th>最后更新时间</th>
			    </tr>
			  </thead>
			  <tbody>
				#if(!$!{pageModel.recList} || $!{pageModel.recList.size()} == 0)
					<tr>
						<td colspan="11">
							<h3>无数据</h3>
						</td>
					</tr>
				#end 
				#foreach($rec in $!{pageModel.recList})
			        <tr>
			          <td>$!{rec.sku}</td>
			          <td>$!{rec.parentSku}</td>
			          <td>$!{rec.name}</td>
			          <td>$!{rec.weight}</td>
			          <td>$!{rec.costPrice}</td>
			          <td>$!{rec.bussOwner}</td>
			          <td>$!{rec.buyer}</td>
			          <td>$!{rec.url}</td>
			          <td>$!{rec.modifyTime}</td>
			        </tr>
				#end
			  </tbody>
			</table>
			#parse("/base/page.vm")
		</div>
	</div>
</div>

<!-- import Modal-->
<div id="importModal" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">导入Excel文件</h4>
      </div>
      <div class="modal-body">
         <form id="importForm" action="${rc.contextPath}/excel/import/flyfish.html" enctype="multipart/form-data" method="post">
           <div class="form-group">
             <label>请选择待导入的文件</label>
             <input type="file" name="file">
           </div>
           <div class="form-group">
                <label>SKU重复数据处理策略</label>
                <div class="radio">
                    <label>
                        <input type="radio" name="same" value="1" checked="">不导入
                    </label>
                </div>
                <div class="radio">
                    <label>
                        <input type="radio" name="same" value="2">覆盖旧数据
                    </label>
                </div>
            </div>
           <div class="form-group">
              <label>功能说明</label>
              <p class="form-control-static">为了能正确导入文件，请严格遵循模版填写数据！！！点击<a href="${rc.contextPath}/excel/temp/flyfish.html">下载模版</a></p>
           </div>
	     </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="confirm-yes btn btn-primary" id="btnImport">提交</button>
        <button type="button" class="confirm-no btn btn-danger" data-dismiss="modal">取消</button>
      </div>
    </div>
  </div>
</div>

<script>
  $("#btnImport").on("click", function () {
     document.getElementById("importForm").submit();
  })
</script>
