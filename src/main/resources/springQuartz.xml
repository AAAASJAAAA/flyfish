<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
		http://www.springframework.org/schema/beans/spring-beans-4.2.xsd">
	
	<!-- 图片上传任务 -->
	<bean id="jobUploadImg"
		class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<!-- 调用的类 -->
		<property name="targetObject">
			<ref bean="quartzService" />
		</property>
		<!-- 调用类中的方法 -->
		<property name="targetMethod">
			<value>uploadImg</value>
		</property>
	</bean>
	
	<!-- 图片上传任务触发时间 -->
	<bean id="triggerUploadImg" class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
		<property name="jobDetail">
			<ref bean="jobUploadImg" />
		</property>
		<!-- cron表达式 -->
		<property name="cronExpression">
			<!-- 每小时执行一次 -->
			<value>0 0 * * * ?</value>
		</property>
	</bean>
	
	
	<!-- 缓存刷新任务 -->
	<bean id="jobRefreshCache"
		class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<!-- 调用的类 -->
		<property name="targetObject">
			<ref bean="quartzService" />
		</property>
		<!-- 调用类中的方法 -->
		<property name="targetMethod">
			<value>refreshCache</value>
		</property>
	</bean>
	
	<!-- 定义触发时间 -->
	<bean id="triggerRefreshCache" class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
		<property name="jobDetail">
			<ref bean="jobRefreshCache" />
		</property>
		<!-- cron表达式 -->
		<property name="cronExpression">
			<!-- 每天执行一次 -->
			<value>0 0 0 * * ?</value>
		</property>
	</bean>
	
	
	<!-- Wish同步任务 -->
	<bean id="jobWishSync"
		class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<!-- 调用的类 -->
		<property name="targetObject">
			<ref bean="quartzService" />
		</property>
		<!-- 调用类中的方法 -->
		<property name="targetMethod">
			<value>wishSync</value>
		</property>
	</bean>
	
	<!-- 图片上传任务触发时间 -->
	<bean id="triggerWishSync" class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
		<property name="jobDetail">
			<ref bean="jobWishSync" />
		</property>
		<!-- cron表达式 -->
		<property name="cronExpression">
			<!-- 每1分钟执行一次 -->
			<value>0 * * * * ?</value>
		</property>
	</bean>

	<!-- 总管理类 如果将lazy-init='false'那么容器启动就会执行调度程序 -->
	<bean id="startQuartz" lazy-init="false" autowire="no"
		class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
		<property name="triggers">
			<list>
				<ref bean="triggerUploadImg" />
				<ref bean="triggerRefreshCache" />
				<ref bean="triggerWishSync" />
			</list>
		</property>
	</bean>
</beans>